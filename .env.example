# Environment Variables
# All variables must be prefixed with APP_
# These will override values in config.yaml

# Global Application Metadata
APP_ENVIRONMENT=development
APP_SERVICE_NAME=task-worker
APP_VERSION=1.0.0

# Worker Configuration
APP_WORKER_JOB_BUFFER_CAPACITY=100
APP_WORKER_JOB_WORKER_COUNT=5
APP_WORKER_TASK_WORKER_COUNT=10

# Server Configuration
APP_SERVER_HOST=0.0.0.0
APP_SERVER_PORT=8080
APP_SERVER_READ_TIMEOUT=15s
APP_SERVER_WRITE_TIMEOUT=15s
APP_SERVER_IDLE_TIMEOUT=60s
APP_SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_USER=
APP_DATABASE_PASSWORD=
APP_DATABASE_DB_NAME=appdb
APP_DATABASE_MAX_OPEN_CONNS=25
APP_DATABASE_MAX_IDLE_CONNS=5
APP_DATABASE_CONN_MAX_LIFETIME=5m
APP_DATABASE_SSL_MODE=disable

# Logger Configuration
APP_LOGGER_LEVEL=info